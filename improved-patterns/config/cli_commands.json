{
  "commands": [
    {
      "command": "run",
      "description_zh": "运行指定设计模式的示例",
      "arguments": [
        {
          "name": "pattern",
          "type": "str",
          "required": true,
          "help_zh": "模式ID或名称"
        },
        {
          "name": "--interactive",
          "type": "bool",
          "required": false,
          "help_zh": "交互模式"
        },
        {
          "name": "--timing",
          "type": "bool",
          "required": false,
          "help_zh": "显示执行时间"
        }
      ],
      "examples_zh": [
        "patterns run singleton",
        "patterns run 观察者模式",
        "patterns run observer --timing"
      ]
    },
    {
      "command": "list",
      "description_zh": "列出所有或指定分类的设计模式",
      "arguments": [
        {
          "name": "category",
          "type": "str",
          "required": false,
          "help_zh": "模式分类"
        },
        {
          "name": "--format",
          "type": "str",
          "required": false,
          "help_zh": "输出格式 (table, json, simple)"
        }
      ],
      "examples_zh": [
        "patterns list",
        "patterns list creational",
        "patterns list --format json"
      ]
    },
    {
      "command": "docs",
      "description_zh": "查看指定模式的文档",
      "arguments": [
        {
          "name": "pattern",
          "type": "str",
          "required": true,
          "help_zh": "模式ID或名称"
        },
        {
          "name": "--section",
          "type": "str",
          "required": false,
          "help_zh": "仅显示特定章节"
        }
      ],
      "examples_zh": [
        "patterns docs singleton",
        "patterns docs observer --section use_cases"
      ]
    },
    {
      "command": "test",
      "description_zh": "运行模式示例的测试",
      "arguments": [
        {
          "name": "pattern",
          "type": "str",
          "required": false,
          "help_zh": "模式ID(省略则运行所有测试)"
        },
        {
          "name": "--coverage",
          "type": "bool",
          "required": false,
          "help_zh": "显示测试覆盖率"
        },
        {
          "name": "--verbose",
          "type": "bool",
          "required": false,
          "help_zh": "详细输出"
        }
      ],
      "examples_zh": [
        "patterns test",
        "patterns test singleton",
        "patterns test --coverage"
      ]
    }
  ]
}
